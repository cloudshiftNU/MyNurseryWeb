@{
    Layout = "~/Views/Shared/_LayoutWelcome.cshtml";
    ViewData["Title"] = "MyNursery";
}

<div class="position-relative text-center" style="width: 100%;">
    <img src="~/assets/images/Vector.png" alt="Alternate Text" style="width: 100%; height: auto;" />

    <div class="position-absolute top-50 start-50 translate-middle" style="font-family: var(--main-font);">
        <h2 class="text-white mb-1" style="font-size: 2.5rem;">Contact</h2>
        <p class="text-white">Contact Us</p>
    </div>
</div>

<!-- Contact Section -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-start g-5">
            <!-- Contact Info Box -->
            <div class="col-md-5">
                <div class="p-4 rounded" style="background-color: var(--primary-color); color: white;">
                    <div class="mb-3">
                        <strong><i class="bi bi-telephone-fill me-2"></i>Call Us Now</strong><br>
                        +94 772653446
                    </div>
                    <div class="mb-3">
                        <strong><i class="bi bi-envelope-fill me-2"></i>Mail Us Today</strong><br>
                        info@abcd.com
                    </div>
                    <div class="mb-3">
                        <strong><i class="bi bi-geo-alt-fill me-2"></i>Location</strong><br>
                        123 Negombo
                    </div>
                    @* <div class="mt-4" style="height: 180px; background-color: #f9f4ef; border-radius: 10px;"></div> *@
                </div>
            </div>

            <!-- Contact Form -->
            <div class="col-md-7">
                <h2 class="fw-bold mb-4">Ready To Get Started?</h2>
                <form>
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="Your Name">
                        </div>
                        <div class="col-md-6">
                            <input type="email" class="form-control" placeholder="Your Email">
                        </div>
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Your Subject">
                    </div>
                    <div class="mb-3">
                        <textarea class="form-control" rows="5" placeholder="Write Message"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary px-4">Send Message →</button>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Vector Line Section -->



